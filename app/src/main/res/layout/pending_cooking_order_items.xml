<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="4dp"
    app:cardBackgroundColor="@color/GrayTransparent"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tvTime"
            android:textColor="@color/colorBlack"
            android:fontFamily="serif"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:text="23 may 2015  "
            />
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:fontFamily="serif"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"
            android:text="12:23  "
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgRestaurant"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20sp"
            android:padding="5dp"
            android:src="@drawable/logo_restaurant" />
        <TextView
            android:id="@+id/tvRestaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/imgRestaurant"
            android:fontFamily="sans-serif-black"
            android:text="Shab Neshin"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgCustomer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:src="@drawable/customer_unknown" />
        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="5dp"
            android:layout_toLeftOf="@+id/imgCustomer"
            android:fontFamily="sans-serif-black"
            android:text="Mina aghaei Dinani"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />



        <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgRestaurant"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-black"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:text="Distance: "
        />


        <TextView
        android:id="@+id/tvTotalDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tvDistance"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-black"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/imgRestaurant"
        android:layout_marginStart="1dp"
        android:text="3.5 Km "
        />
        <TextView
            android:id="@+id/tvFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvTotalDistance"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif-black"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/imgRestaurant"
            android:layout_marginStart="15dp"
            android:text="Fee:  "
            />
        <TextView
            android:id="@+id/tvTotalFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvFee"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="sans-serif-black"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/imgRestaurant"
            android:layout_marginStart="1dp"
            android:text="6.5 $  "
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>